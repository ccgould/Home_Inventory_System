<?xml version="1.0" encoding="utf-8" ?>
<mct:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:mct="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
             x:Class="Home_Inventory_System.Views.AddNewProductPage"
           CanBeDismissedByTappingOutsideOfPopup="False">

    <VerticalStackLayout>
        <Label Text="Add Product Name" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
        <Frame CornerRadius="10" Padding="3" Margin="0,10,0,0" BackgroundColor="White">
            <VerticalStackLayout>

                <Entry x:Name="ProductName" Margin="5,0,0,0" Placeholder="Product Name" FontSize="18" TextColor="Black">
                </Entry>

                <Button Text="Add" Clicked="Button_Clicked"/>
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</mct:Popup>